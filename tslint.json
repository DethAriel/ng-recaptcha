{
  "extends": [
    "tslint:latest",
    "./ng2-lint.json"
  ],
  "rules": {
    "interface-name": [
      true,
      "never-prefix"
    ],
    "no-any": true,
    "no-default-export": true,
    "no-invalid-this": true,
    "no-require-imports": true,
    "no-switch-case-fall-through": true,
    "no-use-before-declare": true,
    "object-literal-key-quotes": [
      true,
      "as-needed"
    ],
    "ordered-imports": true,
    "quotemark": [
      true,
      "single"
    ],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore"
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-module",
      "check-operator",
      "check-separator",
      "check-type",
      "check-typecast"
    ]
  }
}
